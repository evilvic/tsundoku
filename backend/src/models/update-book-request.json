{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "book",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "pages": {
      "type": "number",
      "minimum": 0
    },
    "cover": {
      "type": "string",
      "minLength": 1
    },
    "read": {
      "type": "boolean"
    },
    "rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    }
  },
  "required": [
    "title",
    "author",
    "pages",
    "cover",
    "read",
    "rate"
  ],
  "additionalProperties": false
}